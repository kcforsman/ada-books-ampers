<h2 class="page-title"><%= page_title %></h2>

<% if @book.errors.any? %>
  <ul class="errors">
    <% @book.errors.each do |field, message| %>
      <li>
        <strong><%= field.capitalize %>: <%= message %></strong>
      </li>
    <%end%>
  </ul>
<% end %>

<%= form_for @book do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :author %>
  <%= f.select :author_id, Author.all.map{ |auth| [auth.name, auth.id] } %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.submit %>
<% end %>
